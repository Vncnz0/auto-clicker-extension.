{
  "manifest_version": 3,
  "name": "Auto Clicker Button Helper",
  "description": "Estensione per cliccare automaticamente un pulsante specifico su una pagina.",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Auto Clicker",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
